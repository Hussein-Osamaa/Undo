{
  "name": "@madas/client-app",
  "version": "1.0.0",
  "description": "Client business management application for MADAS SaaS platform",
  "private": true,
  "scripts": {
    "dev": "next dev -p 3002",
    "build": "next build",
    "start": "next start -p 3002",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "setup": "chmod +x scripts/setup.sh && ./scripts/setup.sh",
    "deploy": "chmod +x scripts/deploy.sh && ./scripts/deploy.sh",
    "deploy:quick": "chmod +x deploy-now.sh && ./deploy-now.sh",
    "deploy:firebase": "chmod +x deploy-with-your-firebase.sh && ./deploy-with-your-firebase.sh",
    "deploy:preview": "vercel",
    "deploy:local": "npm run build && npm run start",
    "seed:sample": "echo 'Use the sample data seeder in the app interface'",
    "postinstall": "echo 'Run npm run setup to configure your development environment'"
  },
  "dependencies": {
    "next": "^14.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "firebase": "^10.7.0",
    "zustand": "^4.4.0",
    "react-hook-form": "^7.47.0",
    "@hookform/resolvers": "^3.3.0",
    "zod": "^3.22.0",
    "lucide-react": "^0.292.0",
    "date-fns": "^2.30.0",
    "recharts": "^2.8.0",
    "framer-motion": "^10.16.0",
    "react-hot-toast": "^2.4.1",
    "@tanstack/react-query": "^5.0.0",
    "@tanstack/react-table": "^8.10.7",
    "react-select": "^5.8.0",
    "react-datepicker": "^4.21.0",
    "react-dropzone": "^14.2.0",
    "html2canvas": "^1.4.0",
    "jspdf": "^2.5.0",
    "qrcode": "^1.5.0",
    "barcode-scanner": "^0.1.0",
    "@madas/shared": "file:../shared",
    "tailwindcss": "^3.3.0",
    "autoprefixer": "^10.4.0",
    "postcss": "^8.4.0",
    "clsx": "^2.0.0",
    "class-variance-authority": "^0.7.0",
    "tailwind-merge": "^2.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.8.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/react-datepicker": "^4.19.0",
    "@types/qrcode": "^1.5.0",
    "@types/jest": "^29.5.0",
    "typescript": "^5.2.0",
    "eslint": "^8.0.0",
    "eslint-config-next": "^14.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/jest-dom": "^6.1.0",
    "@tailwindcss/typography": "^0.5.0",
    "@tailwindcss/forms": "^0.5.0",
    "@tailwindcss/aspect-ratio": "^0.4.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
